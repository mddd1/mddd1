void calcularPromedios(float nota[2][3]) {

    for (int i = 0; i < 2; i++) {
            float suma = 0;
        for (int j = 0; j < 3; j++) {
            suma += nota[i][j];
        }
        float promedio = suma / 3;
        cout << "Promedio de la fila "  <<i+1<< ": " << promedio << endl;
    }
}
